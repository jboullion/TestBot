{
	"extends": [
		// add more generic rulesets here, such as:
		// 'eslint:recommended',
		// "plugin:vue/vue3-recommended",
		"plugin:vue/recommended" // Use this if you are using Vue.js 2.x.
	  ],
	"parser": "vue-eslint-parser",
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"amd": true,
		"node": true
	},
	"rules": {
        "no-unused-vars": "off",
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    }
}