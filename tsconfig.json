{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@handlers/*": ["handlers/*"],
      "@events/*": ["handlers/events/*"],
      "@commands/*": ["handlers/commands/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
